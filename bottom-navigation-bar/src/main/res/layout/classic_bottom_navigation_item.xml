<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/classic_bottom_navigation_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/classic_height"
    android:background="?selectableItemBackgroundBorderless"
    android:paddingBottom="@dimen/classic_height_bottom_padding"
    android:paddingLeft="@dimen/classic_width_padding"
    android:paddingRight="@dimen/classic_width_padding"
    android:paddingTop="@dimen/classic_height_top_padding_inactive">

    <FrameLayout
        android:layout_width="@dimen/classic_icon_badge_grid_width"
        android:layout_height="@dimen/classic_icon_badge_grid_height"
        android:layout_gravity="center_horizontal|top">

        <ImageView
            android:id="@+id/classic_bottom_navigation_icon"
            android:layout_width="@dimen/classic_icon_grid"
            android:layout_height="@dimen/classic_icon_grid"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/classic_bottom_navigation_badge"
            style="@style/BadgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:gravity="center" />
    </FrameLayout>

    <TextView
        android:id="@+id/classic_bottom_navigation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="1"
        android:textSize="@dimen/classic_label_inactive" />

</FrameLayout>